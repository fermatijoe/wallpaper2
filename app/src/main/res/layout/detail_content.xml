<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:visibility="gone"
    android:id="@+id/main_buttons_ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="24dp"
    app:layout_anchor="@id/collapsing_toolbar"
    app:layout_anchorGravity="bottom">

    <LinearLayout
        android:id="@+id/save_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp">

            <ProgressBar
                android:id="@+id/progress_view_download"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/imageViewDownload"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_file_download_24dp"/>
        </FrameLayout>


        <TextView
            android:id="@+id/m_save_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/DOWNLOAD"
            android:textColor="#fafafa"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="2dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:background="#ffffff"/>

    <LinearLayout
        android:id="@+id/set_as_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewSetAs"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_wallpaper_24dp"/>

        <TextView
            android:id="@+id/set_as_tv"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SET_AS"
            android:textColor="#fafafa"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:background="#ffffff"/>

    <LinearLayout
        android:id="@+id/fav_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewFavourite"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_favorite_border_black_24dp"/>

        <TextView
            android:id="@+id/fav_tv"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FAVORITE"
            android:textColor="#fafafa"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>


